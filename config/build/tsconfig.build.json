{
  "extends": "./tsconfig.json",
  "include": [
    "@types/**/*",
    "src/theme/**/*",
    "src/utils/**/*"
  ],
  "exclude": [
    "src/theme/build",
    "src/**/*.spec.tsx",
    "src/**/*.stories.tsx"
  ],
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true
  }
}
