{
  "extends": "./tsconfig.json",
  "include": [
    "@types/**/*",
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.tsx",
    "src/**/*.stories.tsx"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true
  }
}
