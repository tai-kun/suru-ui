{
  "extends": [
    "./node_modules/@tsconfig/node21/tsconfig.json",
    "./node_modules/@tsconfig/strictest/tsconfig.json"
  ],
  "include": [
    "@types/**/*",
    "config/**/*",
    "scripts/**/*",
    "src/**/*"
  ],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "noEmit": true,
    "sourceMap": true,
    "module": "ES2022",
    "moduleResolution": "Bundler"
  }
}
