#!/usr/bin/env bash

set -e

function cleanup() {
    if [ -f tsconfig.build.json ]; then
        rm tsconfig.build.json
    fi
}

trap cleanup EXIT

if [ -d dist ]; then
    rm -rf dist
fi

npm run setup
node --enable-source-maps .config/build/esbuild.js

cp .config/build/tsconfig.build.json tsconfig.build.json
npx tsc -p tsconfig.build.json
