{
  "name": "suru-ui",
  "type": "module",
  "version": "0.0.0",
  "description": "",
  "license": "MIT",
  "sideEffects": false,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "exports": {
    "./theme": {
      "types": "./dist/theme/index.d.ts",
      "default": "./dist/theme/index.js"
    },
    "./theme/all.css": "./dist/theme/all.css",
    "./theme/base.css": "./dist/theme/base.css",
    "./theme/light-desktop.css": "./dist/theme/light-desktop.css",
    "./theme/light-mobile.css": "./dist/theme/light-mobile.css",
    "./theme/dark-desktop.css": "./dist/theme/dark-desktop.css",
    "./theme/dark-mobile.css": "./dist/theme/dark-mobile.css",
    "./theme/desktop.css": "./dist/theme/desktop.css",
    "./theme/mobile.css": "./dist/theme/mobile.css",
    "./theme/light.css": "./dist/theme/light.css",
    "./theme/dark.css": "./dist/theme/dark.css",
    "./utils/clsx": {
      "types": "./dist/utils/clsx.d.ts",
      "default": "./dist/utils/clsx.js"
    },
    "./utils/isPlainObject": {
      "types": "./dist/utils/isPlainObject.d.ts",
      "default": "./dist/utils/isPlainObject.js"
    },
    "./utils/singleton": {
      "types": "./dist/utils/singleton.d.ts",
      "default": "./dist/utils/singleton.js"
    }
  },
  "dependencies": {
    "@radix-ui/react-slot": "~1.0.2"
  },
  "devDependencies": {
    "@ladle/react": "~4.0.2",
    "@playwright/experimental-ct-react": "~1.41.2",
    "@rollup/plugin-replace": "~5.0.5",
    "@swc-node/register": "~1.8.0",
    "@tsconfig/node21": "~21.0.1",
    "@tsconfig/strictest": "~2.0.3",
    "@types/mock-fs": "~4.13.4",
    "@types/node": "~20.11.20",
    "@types/react": "~18.2.57",
    "@types/react-dom": "~18.2.19",
    "@types/react-is": "~18.2.4",
    "cfg-test": "~0.4.3",
    "deep-object-diff": "~1.1.9",
    "deepmerge": "~4.3.1",
    "dprint": "~0.45.0",
    "esbuild": "~0.20.1",
    "esbuild-plugin-replace": "~1.4.0",
    "minimatch": "~9.0.3",
    "mock-fs": "~5.2.0",
    "playwright": "~1.41.2",
    "plop": "~4.0.1",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "react-is": "~18.2.0",
    "tsd": "~0.30.5",
    "typescript": "~5.3.3",
    "valibot": "~0.29.0",
    "visit-json": "~0.2.2",
    "yaml": "~2.3.4"
  },
  "repository": "git+https://github.com/tai-kun/suru-ui.git",
  "author": {
    "name": "tai-kun",
    "url": "https://github.com/tai-kun/"
  },
  "scripts": {
    "add": "plop --plopfile config/code/plopfile.js",
    "tsc": "tsc --noEmit && tsd -f '@types/**/*.d.ts' -f 'src/**/*.{ts,tsx}'",
    "fmt": "dprint fmt",
    "lint": "exit 0",
    "test": "node --enable-source-maps --import cfg-test --test 'src/**/*.ts' --test 'src/utils/**/*.tsx'",
    "test:ct": "playwright test -c config/playwright/ct.config.ts",
    "story": "ladle dev --config config/ladle",
    "build": "scripts/build.sh",
    "build:theme": "scripts/build-theme.sh",
    "postinstall": "test ! -f scripts/postinstall.sh || scripts/postinstall.sh"
  },
  "volta": {
    "node": "21.6.2"
  }
}
